<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/wifi_view"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:showIn="@layout/fragment_wifi_dialog"
    >

    <ImageView
        android:id="@+id/imgConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/connected"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Wifi Name"
        android:textColor="@color/wifi_ssid_gray"
        android:textSize="15sp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/imgLock"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_lock"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgWifi"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        app:tint="@color/black"
        android:src="@drawable/wifi_assest_for_wifi_layout_24"
        />

    <ImageView
        android:id="@+id/imgWIFI"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/wifi_assest_for_wifi_layout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.appcompat.widget.LinearLayoutCompat>